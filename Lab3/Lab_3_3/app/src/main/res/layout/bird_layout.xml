<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/huuhkaja"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="huuhkajaTalk"
                android:scaleType="centerCrop"
                android:src="@drawable/huuhkaja">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/peippo"
            android:src="@drawable/peippo"
            android:onClick="peippoTalk">
        </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/peukaloinen"
            android:src="@drawable/peukaloinen"
            android:onClick="peukaloinenTalk">
        </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/punatulkku"
            android:src="@drawable/punatulkku"
            android:onClick="punatulkkuTalk">
        </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>